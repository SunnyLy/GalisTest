<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/rootView"
    >


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:background="@color/white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#57b610"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/shopmall_detail_margin"
            android:paddingRight="@dimen/shopmall_detail_margin"
            >

            <ImageView
                android:id="@+id/good_style_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/default_gray_light"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/good_style_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥55"
                        android:textSize="@dimen/default_textsizexmiddle"
                        android:textColor="@color/shoppingmall_price_color"
                        />

                    <TextView
                        android:id="@+id/good_style_stockcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="(库存2500件)"
                        android:textSize="15sp"
                        android:textColor="@color/defaultTextColorGrayBlack"
                        />
                </LinearLayout>
                <!--<TextView-->
                <!--android:id="@+id/good_style_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="犀牛橄榄油"-->
                <!--android:textSize="@dimen/default_textsizelarge"-->
                <!--android:textColor="@color/defaultTextColorGray"-->
                <!--/>-->
                <TextView
                    android:id="@+id/good_style_defstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选    ”1000件“"
                    android:textSize="@dimen/default_textsize"
                    android:textColor="@color/defaultTextColorGrayBlack"
                    android:layout_marginTop="12dp"
                    />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_background_gray"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/shopmall_detail_margin"
            android:paddingRight="@dimen/shopmall_detail_margin"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品规格"
                android:textSize="@dimen/default_textsizexmiddle"
                android:textColor="@color/defaultTextColorGrayBlack"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"

                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide_gray"
            android:layout_marginLeft="@dimen/shopmall_detail_margin"
            android:layout_marginRight="@dimen/shopmall_detail_margin"
            />

        <GridView
            android:id="@+id/good_style_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/white"
            android:numColumns="4"
            android:horizontalSpacing="@dimen/shopmall_detail_margin"
            android:verticalSpacing="5dp"
            android:columnWidth="60dp"
            android:stretchMode="columnWidth"
            >
        </GridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide_gray"
            android:layout_marginLeft="@dimen/shopmall_detail_margin"
            android:layout_marginRight="@dimen/shopmall_detail_margin"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/shopmall_detail_margin"
            android:paddingRight="@dimen/shopmall_detail_margin"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/good_style_buymannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量"
                android:textSize="@dimen/default_textsizexmiddle"
                android:textColor="@color/defaultTextColorGrayBlack"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                />


            <!--<TextView-->
            <!--android:id="@+id/good_style_buygoodnum"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toLeftOf="@id/business_city_goods_style_choose"-->
            <!--android:text="购买数量"-->
            <!--android:textSize="17sp"-->
            <!--android:textColor="@color/defaultTextColorGray"-->
            <!--/>-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide_gray"
            android:layout_marginLeft="@dimen/shopmall_detail_margin"
            android:layout_marginRight="@dimen/shopmall_detail_margin"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide_gray"
            android:layout_marginLeft="@dimen/shopmall_detail_margin"
            android:layout_marginRight="@dimen/shopmall_detail_margin"
            />
        <!--<TextView-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:id="@+id/good_style_centain"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="@dimen/shopmall_detail_margin"-->
        <!--android:gravity="center"-->
        <!--android:text="确定"-->
        <!--android:onClick="save"-->
        <!--android:textSize="@dimen/user_item_textSize"-->
        <!--android:textColor="@color/defaultTextColorGray"-->
        <!--android:background="@drawable/default_border_green"-->
        <!--/>-->
        <RelativeLayout
            android:id="@+id/business_city_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="right"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/business_city_detail_addbike"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/business_city_detail_buy"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立即购买"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="@dimen/shopmall_detail_margin"
                android:layout_marginLeft="12dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/business_city_detail_addbike"
                android:textSize="13sp"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
